<h1>Welcome Back </h1>

<% if session[:user] == nil%>
  <p>No one is logged in</p>
<% elsif session[:user] != nil %>
  <p>Welcome back,  <%= session[:user].first_name.capitalize%></p>
<% end %>

<div class="post">
  <a href="post">Make a New Post</a>


  <% $all_post.each do |post|%>

  <h2><%=post.title%></h2>

  <p><%=post.content%></p>

  <img src="<%=post.image_url%>">

  <% end %>
</div>
