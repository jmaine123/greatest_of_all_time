
<% if session[:user] == nil%>
  <p>No one is logged in</p>
<% elsif session[:user] != nil %>
  <h1>Welcome back,  <%= session[:user].first_name.capitalize%></h1>
<% end %>

<div class="profile_grid">
  <img src="https://t3.ftcdn.net/jpg/00/64/67/80/240_F_64678017_zUpiZFjj04cnLri7oADnyMH0XBYyQghG.jpg" style='margin:5% auto; height: 90%; width:70%;'alt="">
  <div class="profile">
    <h2>Profile Information</h2>
    <ul>
      <li>First Name: <%= session[:user].first_name %></li>
      <li>Last Name: <%= session[:user].last_name%></li>
      <li>Email: <%= session[:user].email%></li>
    </ul>
  </div>
  <div class="post_choice">
    <a class='posting_option' href="post"><button>Make A New Post</button></a>
    <a class='posting_option' href="timeline"><button>See Timeline</button></a>
  </div>
  <div>
    <center><a href="/delete"><button id="cancel_button"type="button" name="button">Cancel Account</button></a></center>
  </div>

</div>

<div class="myAccount">


  <h2>My Recent Posts</h2>

    <div class='myPost'>
      <% @my_post.last(20).reverse.each do |post|%>

      <div class='post'>
        <h2><%=post.title%></h2>

        <h2>Posted by: <%=post.owner%></h2>

        <div class="img_grid">
          <div>
            <img src="<%=post.playerOne_img%>" style="width:100%; height:10em"alt="">
            <h4><%= post.playerOne%></h4>
              <ul>
                <li><%=post.p1_statOne%></li>
                <li><%=post.p1_statTwo%></li>
                <li><%=post.p1_statThree%></li>
              </ul>
          </div>
          <div>
            <img src="<%=post.playerTwo_img%>" style="width:100%; height:10em" alt="">
            <h4><%= post.playerTwo%></h4>
            <ul>
              <li><%=post.p2_statOne%></li>
              <li><%=post.p2_statTwo%></li>
              <li><%=post.p2_statThree%></li>
            </ul>
          </div>
          <div>
            <img src="<%=post.playerThree_img%>" style="width:100%; height:10em" alt="">
            <h4><%= post.playerThree%></h4>

            <ul>
              <li><%=post.p3_statOne%></li>
              <li><%=post.p3_statTwo%></li>
              <li><%=post.p3_statThree%></li>
            </ul>
          </div>
        </div>

        <p><%=post.content%></p>

        <p><%=post.created_at%></p>
      </div>
      <% end %>
    </div>

</div>
